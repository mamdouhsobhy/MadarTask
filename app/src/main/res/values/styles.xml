<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NewBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/drawable_corner_bottomsheet_above</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/NewBottomSheetStyle</item>
    </style>

    <style name="edittext_background" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/tajawal_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="hintTextColor">@color/color_gray</item>
        <item name="android:background">@drawable/drawable_corner_edittext_main_color</item>
        <item name="android:drawablePadding">@dimen/dp_10</item>
        <item name="android:padding">@dimen/dp_12</item>
    </style>

    <style name="edittext_background_phone" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/tajawal_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="hintTextColor">@color/color_gray</item>
        <item name="android:height">@dimen/dp_50</item>
        <item name="android:drawablePadding">@dimen/dp_10</item>
        <item name="android:padding">@dimen/dp_12</item>
    </style>

    <style name="button_background" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/tajawal_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">@dimen/dp_7</item>
        <item name="android:background">@drawable/drawable_gradient_app_colors</item>
        <item name="android:gravity">center</item>
    </style>

</resources>